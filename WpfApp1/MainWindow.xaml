<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Практическая работа №1" Height="450" Width="800">
    <Grid>
        <Menu>
            <MenuItem Header="Управление">
                <MenuItem Header="Запуск" Click="btn_Start"/>
            </MenuItem>
            <MenuItem Header="Выход" Click="btn_Exit"/>
            <MenuItem Header="О программе" ToolTip="Мансуров В.Ю, ИСП-31. Вариант №9"/>
        </Menu>
        <TextBox Name="tb_Output" HorizontalAlignment="Left" Margin="10,134,0,0" TextWrapping="Wrap" Text="Ответ:" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="tb_Input" HorizontalAlignment="Left" Margin="10,81,0,0" TextWrapping="Wrap" Text="Введите кол-во элементов.." VerticalAlignment="Top" Width="120" MouseDoubleClick="text_Clear"/>


    </Grid>
</Window>
